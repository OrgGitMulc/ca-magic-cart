<% if notice.present? %>
      <div class="notification-banner">
        <p><%= notice %></p>
      </div>
<% end %>

<h1>Categories</h1>

<div class='new-div'>
  <%= link_to "New category", new_category_path, class: "submit-button" %>
</div>

<div id="categories">
  <% @categories.each do |category| %>

    <div class='categories-container'>
      <div class='category-card'>
        <div id="<%= dom_id category %>">
          <p>
            <strong>Name:</strong>
            <%= category.name %>
          </p>
      </div>
        <p>
          <%= link_to "Show products", by_category_products_path(category.id), class: "submit-button" %>
          <%= link_to "Show this category", category, class: "submit-button" %>
        </p>
        <% if category.name == 'Singles'%>
          <%= image_tag 'mtg_back', class: 'category-image'%>
        <% elsif category.name == 'Booster'%>
          <%= image_tag 'mtg_booster', class: 'category-image'%>
        <% elsif category.name == 'Accessory'%>
          <%= image_tag 'mtg_deckbox', class: 'category-image'%>
        <% else %>
          <%= image_tag 'cart_logo', class: 'category-image'%>
        <% end %>
      </div>
    </div>
    
  <% end %>
</div>
