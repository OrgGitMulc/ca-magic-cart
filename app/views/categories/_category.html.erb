<div class="show-container">
  <div class="show-card">
    <div id="<%= dom_id category %>">
      <p>
        <strong>Name:</strong>
        <%= category.name %>
      </p>
    </div>
      <%= link_to "Edit this category", edit_category_path(category), class: "submit-button" %>
      <%= link_to "Back to categories", categories_path, class: "submit-button" %>
      <%= button_to "Destroy this category", @category, method: :delete, class: "submit-button" %>
  </div>
</div>

