<div class='edit-container'>
  <div class='edit-card'>
    <%= form_with(model: subcategory) do |form| %>
      <% if subcategory.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(subcategory.errors.count, "error") %> prohibited this subcategory from being saved:</h2>

          <ul>
            <% subcategory.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :name, style: "display: block" %>
        <%= form.text_field :name %>
      </div>

      <div>
        <%= form.label :category_id, style: "display: block" %>
        <%= form.collection_select :category_id, Category.all, :id, :name, prompt: "Select Category" %>
      </div>

      <div>
        <%= form.submit %>
      </div>
    <% end %>

    <div class='btns'>
      <%= link_to "Show this subcategory", @subcategory %> |
      <%= link_to "Back to subcategories", subcategories_path %>
    </div>
  </div>
</div>



